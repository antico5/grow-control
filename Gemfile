source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '~> 4'
gem 'jquery-rails'
gem 'turbolinks'
gem 'uglifier'
gem 'coffee-rails'

gem 'groupdate' # to group by days and weeks

gem 'slim'

# Use sqlite3 as the database for Active Record

group :development, :test do
  gem 'sqlite3'
  gem 'pry'
end

group :production do
  gem 'pg', '~> 0'
  gem 'rails_12factor'
end
